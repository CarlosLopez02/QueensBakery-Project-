
@{
    ViewBag.Title = "DessertData";
}

<!DOCTYPE html>
<html>

<head>
    <title>Desserts Managment</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Desserts Data">
    <meta name="author" content="Carlos Lopez">
    <link rel="stylesheet" href="~/CSS/DataManagment.css" />

</head>

<body>

    <section id="Dessert-Add">
        <form action="javascript:void(0);" method="POST" onsubmit="addDessert()">
            <h4 id="formTitle">Add Dessert</h4>
            <ul>
                <li>
                    <label for="dessert_id"><strong>DessertID:</strong></label>
                    <input type="text" id="dessert_id" placeholder="New dessert id">
                </li>
                <li>
                    <label for="dessert_desc"><strong>Description:</strong></label>
                    <input type="text" id="dessert_desc" placeholder="New description" />
                </li>
                <li>
                    <label for="dessert_type"><strong>Type:</strong></label>
                    <input type="text" id="dessert_type" placeholder="New Type" />
                </li>
                <li>
                    <label for="dessert_cat"><strong>Category:</strong></label>
                    <input type="text" id="dessert_cat" placeholder="New category" />
                </li>
                <li>
                    <label for="id-promo_dessert"><strong>Promotion/discount:</strong></label>
                    <input type="text" id="id-promo_dessert" placeholder="New promotion/discount" />
                </li>
                <li>
                    <label for="des_price"><strong>Price:</strong></label>
                    <input type="text" id="des_price" placeholder="New price" />
                    <input type="submit" value="Add">
                </li>
            </ul>
        </form>
    </section>

    <section id="Dessert-Edit">

        <form action="javascript:void(0);" onsubmit="updateDessert()">
            <h4>Edit Dessert</h4>
            <!---->
            <label for="EditdesId"><strong>Dessert_ID:</strong></label>
            <input type="text" id="EditdesId" placeholder="" readonly>
            <!---->
            <label for="editdesDesc"><strong>Description:</strong></label>
            <input type="text" id="editdesDesc" placeholder="" />
            <!---->
            <label for="editdesType"><strong>Type:</strong></label>
            <input type="text" id="editdesType" placeholder="" />
            <!---->
            <label for="editdesCat"><strong>Category:</strong></label>
            <input type="text" id="editdesCat" placeholder="" />
            <!---->
            <label for="editpromodis"><strong>Promotion/discount:</strong></label>
            <input type="text" id="editpromodis" placeholder="" />
            <!---->
            <label for="editdesPrice"><strong>Price:</strong></label>
            <input type="text" id="editdesPrice" placeholder="" />
            <!---->
            <input type="submit" value="Save">
            <a onclick="closeInput()" aria-label="close">&#10006;</a>
        </form>
    </section>

    <section id="SearchDessert">
        <form action="javascript:void(0);" onsubmit="searchDessert()">
            <h4>Search Dessert</h4>
            <p>Enter information to search for dessert.</p>
            <label for="Searchdessert"><strong>Search:</strong></label>
            <input type="text" id="Searchdessert" placeholder="Enter value"/>
            <input type="submit" value="Search" />
        </form>
    </section>
    <br />


    <section id="Alldesserts">
        <h2>All Desserts</h2>
        <div id="table_container">
        <table>
            <thead>
                <tr>
                    <th>DessertID</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Promotion/Discount</th>
                    <th>Price</th>
                    <th>Edit Dessert</th>
                    <th>Delete Dessert</th>
                </tr>
            </thead>
            <tbody id="DetDessert">
            </tbody>
        </table>
        </div>
    </section>

    <p id="counter"></p>

    <!---------------------------------------------------------------------------->
    

    <script src="~/Scripts/App/Desserts.js" asp-append-version="true"></script>
   
    <script type="text/javascript">
        getDessert();
       

    </script>

</body>

</html>

